pkgname=oshin-grub-theme
pkgver=1.0
pkgrel=1
pkgdesc="Oshin Grub Theme"
arch=('any')
url="https://github.com/Oshin-OS-Official/oshin-grub"
license=('MIT')
depends=('grub')

source=("https://github.com/Oshin-OS-Official/oshin-grub/archive/main.tar.gz")
sha256sums=('SKIP')

package() {
    # Extract the theme
    tar -xf "${srcdir}/main.tar.gz" -C "${pkgdir}/usr/share/grub/themes/"

    # Rename the extracted folder to 'oshin'
    mv "${pkgdir}/usr/share/grub/themes/oshin-grub-main" "${pkgdir}/usr/share/grub/themes/oshin"

    # Set permissions
    chmod -R 755 "${pkgdir}/usr/share/grub/themes/oshin"
}
